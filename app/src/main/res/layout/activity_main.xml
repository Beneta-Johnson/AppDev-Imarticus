<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/NameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="@string/NameHint"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/PassHint"
        app:layout_constraintStart_toStartOf="@+id/NameHint"
        app:layout_constraintTop_toBottomOf="@+id/NameHint" />

    <EditText
        android:id="@+id/PasswordBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:hint="@string/PasswordHint"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/Loginbutton"
        app:layout_constraintStart_toStartOf="@+id/PassHint"
        app:layout_constraintTop_toBottomOf="@+id/PassHint" />

    <Button
        android:id="@+id/Loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="163dp"
        android:text="@string/loginButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/PasswordBox"
        app:layout_constraintTop_toBottomOf="@+id/PasswordBox" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="337dp"
        android:layout_height="62dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="66dp"
        android:text="@string/Title"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/NameHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NameHint"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="23dp"
        android:text="@string/NameString"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/NameBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <TextView
        android:id="@+id/PassHint"
        android:layout_width="258dp"
        android:layout_height="54dp"
        android:layout_marginBottom="27dp"
        android:text="@string/PasswordString"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/PasswordBox"
        app:layout_constraintStart_toStartOf="@+id/NameBox"
        app:layout_constraintTop_toBottomOf="@+id/NameBox" />
</androidx.constraintlayout.widget.ConstraintLayout>